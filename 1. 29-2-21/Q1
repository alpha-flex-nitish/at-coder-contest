/*#include<iostream>
#include<cmath>
#include<string>
#include<cstring>
#include <cstdio>
#include<vector>*/
#include <bits/stdc++.h>
using namespace std;
int main(){
    int n, i;
    long long int w, l, x, strap;
    cin >> n >> l >> w;
    set<long long int> s;
    for(i=0;i<n;i++){
        cin >> x;
        s.insert(x);
    }
    for(auto itk=s.begin();itk!=s.end();itk++){
				cout<<*itk<<" " << endl;
		}
    for(auto it=s.begin();it!=s.end();it++){
        cout << "*it = " << *it << endl;
        //cout << "*(it+1) = " << *(it+1) << endl;

        if((*(it++)-*it)<=w){
            strap = strap+1;
            cout << "case 1" << endl;
        }
        else if((*(it++)-*it)>w){
            strap =  strap + (*(it++)-*it)/w +1;
            cout << "case 2" << endl;
        }
    }
    cout << "strap1 = " << strap << endl;
    auto it = s.begin();
    if(*it<=w){
        strap = strap+1;
    }
    else if(*it>w){
        strap =  strap + *it/w + 1;
    }
    auto it1 = s.end();
    if(l-*it1<=w){
        strap = strap+1;
    }
    else if((l-*it1)>w){
        strap =  strap + (l-*it1)/w + 1;
    }
    cout << strap;
    return 0;
} 
